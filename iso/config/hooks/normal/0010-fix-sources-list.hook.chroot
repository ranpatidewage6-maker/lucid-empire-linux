#!/bin/sh
# Fix sources.list for Debian 12 (bookworm)
# The security repo changed from /updates to -security

set -e

echo "I: Fixing sources.list for Debian 12"

# Fix security repository URL from bookworm/updates to bookworm-security
sed -i 's|bookworm/updates|bookworm-security|g' /etc/apt/sources.list

# Remove any invalid 'deb none' entries
sed -i '/^deb\(-src\)\? none/d' /etc/apt/sources.list

echo "I: Updated sources.list:"
cat /etc/apt/sources.list

exit 0
